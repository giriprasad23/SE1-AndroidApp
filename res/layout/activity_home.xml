<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/help_bg_img" 
    android:orientation="vertical">

    <Button
        android:id="@+id/launchRefugee"
        style="@style/NiceButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:text="@string/launchRefugee" />

    <Button
        android:id="@+id/launchCharity"
        style="@style/NiceButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/launchRefugee"
        android:layout_centerVertical="true"
        android:text="@string/launchCharity" />

</RelativeLayout>
